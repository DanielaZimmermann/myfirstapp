<div class="container">
  <div class="container-edit-form">
    <%= form_for(product, :html => {class: "form-horizontal"}) do |f| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "control-label col-sm-2 col-sm-offset-2" %>
        <%= f.text_field :name, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "control-label col-sm-2 col-sm-offset-2" %>
        <%= f.text_area :description, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group">
        <%= f.label :image_url %>
        <%= f.text_field :image_url %>
      </div>

       <div class="form-group">
        <%= f.label :colour %>
        <%= f.text_field :colour %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price %>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>

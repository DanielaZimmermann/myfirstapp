<div class="container form-new">
  <div class="container-edit-form">
    <%= form_for product, html: {class: "form-horizontal"} do |f| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :image_url, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :image_url, class: 'form-control' %>
        </div>
      </div>

       <div class="form-group row">
        <%= f.label :colour, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :colour, class: 'form-control' %>
        </div>
      </div>

      <div class="form-groupr row">
        <%= f.label :price, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :price, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="actions col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
